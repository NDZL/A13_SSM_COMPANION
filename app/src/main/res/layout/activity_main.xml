<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ManageExtStorage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF0000"
                android:onClick="onClickManageExternalStorage"
                android:text="M.E.S." />

            <Button
                android:id="@+id/btn_ReadTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:onClick="onClickReadTest"
                android:text="SCOPED.ST READ" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_SSMFileRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:onClick="onClickSSMReadFile"
            android:text="SSM FILE, READ EVERYTHING" />

        <Button
            android:id="@+id/btn_SSMFileDEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:onClick="onClickDeleteFile"
            android:text="SSM FILE, DELETE ALL FOR THIS APP" />
        <Button
            android:id="@+id/btn_SSMFileOVRWRDEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:onClick="onClickShareLocalFile"
            android:text="SSM FILE, CREATE FROM THIS APP" />
        <Button
            android:id="@+id/btn_SSMFileWORKPROFILE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:onClick="onClickReadWorkProfileFile"
            android:text="SSM FILE, READ FROM WORK PROFILE" />
        <Button
            android:id="@+id/btn_SSMFileProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:onClick="onClickReadFromFileProvider"
            android:text="SSM FILE, READ FROM FILE PROVIDER" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_SSMDataQuery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FF9900"
                android:onClick="onClickSSMDataQuery"
                android:text="SSM DATA QUERY" />
        </LinearLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Query Result"/>
    </LinearLayout>
</ScrollView>